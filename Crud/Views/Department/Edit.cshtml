@model Crud.Models.DepartmentModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <div class="card-header">
                <h2 class="text-info">
                    Update Departmentt
                </h2>

            </div>
            <div class="card-body">
                <form method="post" asp-action="Edit">
                    <input type="hidden" class="form-control"  asp-for="DeparmentId" />
                    <div class="form-group">
                        <div class="col-md-3">
                            <label asp-for="DepartmentName"></label>
                            <input type="text" class="form-control" placeholder="enter deparment" autocomplete="off" asp-for="DepartmentName"  />
                            <span clsass="text-danger" asp-validation-for="DepartmentName"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <label asp-for="DepartmentCode"></label>
                            <input type="text" class="form-control" placeholder="enter deparment" autocomplete="off" asp-for="DepartmentCode" />
                            <span clsass="text-danger" asp-validation-for="DepartmentCode"></span>
                        </div>
                    </div>
                    <input type="submit" class="btn btn-primary" value="submit" />
                </form>
            </div>
        </div>
    </div>
</div>