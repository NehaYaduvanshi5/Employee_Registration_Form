@using Crud.Utility;

@model IEnumerable<Crud.Models.DepartmentModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h1>Index</h1>


<div class="container-fluid">
    <div class="row">
        
            <div class="col-12">
           
                <h1 class="text-info  text-center border border-dark bg-danger" >Department Details</h1>
           

            <a class="btn btn-warning" asp-action="Create" asp-controller="Department">Create</a>

            <table class="table table-bordered text-center" id="dataTabeData">
                    <thead class="bg-dark text-light">
                        <tr>
                        <th>DepartmentId</th>                       
                        <th>Department Name</th>
                        <th>Department Code</th>
                        <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var t in Model)
                        {
                        <tr>

                            <td>@t.DeparmentId</td>
                            <td> @Utilities.EveryFirstCharacter(t.DepartmentName)</td>
                            <td>@t.DepartmentCode.ToUpper()</td>
                            <td>
                                <a class="btn btn-primary" asp-action="Edit" asp-controller="Department" asp-route-id="@t.DeparmentId">Edit</a>
                                <a class="btn btn-danger" asp-action="Delete" onclick="return confirm('are you sure! you want to delete this')" asp-controller="Department" asp-route-id="@t.DeparmentId">Delete</a>
                                <a class="btn btn-warning" asp-action="" asp-controller="Department"   asp-route-id="@t.DeparmentId">Details</a>
                                
                            </td>
                        </tr>
                        }
                    </tbody> 


                </table>
            <a class="btn btn-warning float-end m-1 p-2" asp-action="Index" asp-controller="Dashboard">Back to dashboard</a>
            </div>

        </div>

    </div>


@section scripts{
    <script src="~/js/datatable_file.js"></script>

