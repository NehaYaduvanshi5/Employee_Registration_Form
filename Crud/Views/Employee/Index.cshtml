@model IEnumerable<Crud.Models.EmployeeDeparmentviewmodel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}



<div class="container-fluid">
    <div class="row">
        <div  class="float-end">
            <a class="btn btn-primary m-2 p-2" asp-action="Create" asp-controller="Employee" >Add Employee</a>
        </div>
            <div class="col-12">
                <h1 class="text-info  text-center border border-dark bg-danger" >Employee Details</h1>
                <table class="table table-bordered text-center"  id="dataTabeData">
                    <thead class="bg-dark text-light">
                        <tr>
                        <th>EmployeeId</th>
                        <th>Full Name</th>
                        @* <th>FirstName</th>
                        <th>LastName</th> *@
                        <th>Gender</th>
                        <th>Department Name</th>
                        <th>Department Code</th>
                        <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var t in Model)
                        {
                        <tr>

                            <td>@t.EmployeeId</td>
                            <td>@t.FullName</td>
                        @*     <td>@t.FirstName</td>
                            <td>@t.LastName</td> *@
                            <td>@t.Gender</td>
                            <td>@t.DepartmentName</td>
                            <td>@t.DepartmentCode</td>
                            <td>
                                <a class="btn btn-primary" asp-action="Edit" asp-controller="Employee" asp-route-id="@t.EmployeeId">Edit</a>
                                <a class="btn btn-danger" asp-action="Delete" onclick="return confirm('are you sure! you want to delete this')" asp-controller="Employee" asp-route-id="@t.EmployeeId">Delete</a>
                                <a class="btn btn-warning" asp-action="Details" asp-controller="Employee" asp-route-id="@t.EmployeeId">Details</a>
                            </td>
                        </tr>
                        }
                    </tbody> 


                </table>
            <a class="btn btn-warning float-end m-1 p-2" asp-action="Index" asp-controller="Dashboard">Back to dashboard</a>
            </div>

        </div>

    </div>
    @section scripts{
         <script src="~/js/datatable_file.js"></script>

    }
    


