@* //@model IEnumerable<Crud.Models.EmployeeModel> jab merge model method ka use krenge to Ienumrable  ka use nhi  krenge to  *@

@{
    ViewData["Title"] = "Home Page";
}
<div class="Container">
    <div class="row">
        <div class="col-8 offset-2">
            <h1 class="text-info text-center p-1 border border-dark">Employee Details</h1>
            <table class="table table-bordered text-center">
                
                    <thead>
                        <tr>
                        <th>EmployeeId</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Gender</th>
                        <th>Gender</th>
                        <th>DepartmentId</th>
                       @*  <th>Department Name</th>
                        <th>Department Code</th> *@
                        

                        <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach( var u in Model)
                        {
                        <tr>
                            <td>@u.EmployeeId</td>
                            <td>@u.FirstName</td>
                            <td>@u.LastName</td>
                            <td>@u.Gender</td>
                            <td>@u.DepartmentId</td>
                            <td>
                            
                               <a class="btn btn-primary" asp-action="Index" asp-controller="Home" asp-route="@u.EmployeeId">Edit</a>
                               <a class="btn btn-danger" asp-action="" asp-controller="Home" asp-route="@u.EmployeeId">Delete</a>
                               <a class="btn btn-warning" asp-action="" asp-controller="Home" asp-route="@u.EmployeeId">Details</a>
                            </td>
                           
                 
                        </tr>
                        }
                    </tbody>
                

            </table>
        </div>
    </div>
</div>
